<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FFFFFD"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo"
    >
    <!-- card_view:cardUseCompatPadding="true"-->



    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">



        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/os_images"
            android:tag="image_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sriv_border_color="#008fea"
            app:sriv_oval="true"

            app:sriv_left_top_corner_radius="10dip"
            app:sriv_right_top_corner_radius="10dip"
            app:sriv_left_bottom_corner_radius="10dip"
            app:sriv_right_bottom_corner_radius="10dip"

            android:scaleType="fitXY"
            />

            <TextView
                android:id="@+id/os_texts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="bottom"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="right"

                android:shadowColor="#000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"

                android:textColor="@color/colorwight"
                android:textSize="25dp"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>