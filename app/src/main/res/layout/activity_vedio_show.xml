<?xml version="1.0" encoding="UTF-8"?>    <RelativeLayout    tools:context=".VedioShow"    android:paddingRight="10dp"    android:paddingLeft="10dp"    xmlns:tools="http://schemas.android.com/tools"    android:layout_height="match_parent"    android:layout_width="match_parent"    android:background="@color/colorblack"    xmlns:android="http://schemas.android.com/apk/res/android">    <VideoView        android:layout_height="match_parent"        android:layout_width="match_parent"          android:layout_centerInParent="true"        android:id="@+id/vdVw">    </VideoView>    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignRight="@id/vdVw"        android:orientation="horizontal"        >    <ImageButton        android:id="@+id/full_screen"        android:onClick="fullscreen"        android:background="@drawable/btnvidio"        android:src="@drawable/ic_fullscreen"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scaleType="fitCenter"        android:layout_margin="5dp"      >    </ImageButton>        <ImageButton            android:id="@+id/closVedio_screen"            android:onClick="closVedio_screen"            android:background="@drawable/btnvidio"            android:src="@drawable/ic_close_blackvedio_24dp"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:scaleType="fitCenter"            android:layout_margin="5dp"            >        </ImageButton>    </LinearLayout></RelativeLayout>