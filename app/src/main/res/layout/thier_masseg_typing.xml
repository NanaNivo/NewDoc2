<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <View
        android:id="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:background="@drawable/anaa_small"
        android:layout_alignBottom="@id/lenTyping"
        android:layout_width="34dp"
        android:layout_height="34dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lenTyping"
    android:layout_toRightOf="@id/avatar"
    android:background="@drawable/chat_puble_by_other"
    android:layout_marginLeft="5dp"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:elevation="2dp"
    >
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_typing"

        android:src="@drawable/chat_typing"

        />
</LinearLayout>
</RelativeLayout>