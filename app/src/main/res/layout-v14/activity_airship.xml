<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".airshipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/volume_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
             android:onClick="volumeup"
            android:src="@drawable/ic_volume_up_black_24dp"></ImageView>

        <ImageView
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="pauese"
            android:src="@drawable/ic_pause_black2_24dp"
            ></ImageView>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="close"
            android:src="@drawable/ic_close_black_24dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/colorwight"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:text="جبال الألب"
       android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorAccent"
        android:textSize="45dp"
     android:textStyle="bold"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المستوى:"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/status_text_size"
            android:textStyle="bold"
            android:layout_gravity="right"
            tools:ignore="RelativeOverlap"/>

        <TextView
            android:id="@+id/levelbig_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="1"
            android:textColor="@color/colorAccent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/status_text_size"
            android:textStyle="bold"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_label"
                android:textSize="@dimen/status_text_size"
                android:textStyle="bold"
                android:layout_gravity="right"
                tools:ignore="RelativeOverlap"/>

            <TextView
                android:id="@+id/level_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max_number"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/status_text_size"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
<RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8"
   >


</RelativeLayout>
    <!-- Buttons and status displays -->

        <LinearLayout
            android:id="@+id/status_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="vertical"
            tools:ignore="RelativeOverlap"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_label"
                    android:textSize="@dimen/status_text_size"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/score_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/max_number"
                    android:textSize="@dimen/status_text_size"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="left"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أعلى معدل:"
                android:textSize="@dimen/status_text_size"
                android:textStyle="bold"
               android:layout_gravity="right"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_weight="1"
                tools:ignore="RelativeOverlap"/>

            <TextView
                android:id="@+id/scorehigh_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/max_number"
                android:textSize="@dimen/status_text_size"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
               />
                </LinearLayout>

        </LinearLayout>

